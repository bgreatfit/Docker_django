version: 2
jobs:
  build:
    docker:
      - image: circleci/python:3.7.0
    steps:
      - checkout
      - setup_remote_docker
      - run:
          name: Start container and verify it's working
          command: docker-compose up --build
      - run:
          name: Let client talk to server
          command: |
            docker-compose exec django python manage.py test polls